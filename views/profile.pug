extends layout

block content
    #profile-container.main.page-container.container
        .row.mb-4
            .col-md-4.col-md-offset-2
                ul.list-group
                    li.list-group-item.list-group-item-dark
                        h1.display-2
                        //- img.hidden-xs-down(src="/img/snip_logo_high.svg", alt="Snippets Code Editor") 
                        | #{name}
                    li.list-group-item
                        p.mb-0 #{email}
                    li.list-group-item
                        p.mb-0.favorite-book Preferred Code Editor: #{editor}
        .row       
            .col-sm-10
                .row#snippets-row.tab-pane.fade.show.active
            .col.d-none.d-sm-block
                #profileList.list-group.flex-column.sticky-top(role='tablist')
                    a.list-group-item.list-group-item-action.active(data-toggle='list', data-editor='atom', data-uID=currentUser, href='/profile/atom', role='tab', class=activeEditor ==='atom' ? 'active' : '') Atom
                    a.list-group-item.list-group-item-action(data-toggle='list', data-editor='brackets', data-uID=currentUser, href='/profile/brackets', role='tab', class=activeEditor==='brackets' ? 'active' : '') Brackets
                    a.list-group-item.list-group-item-action(data-toggle='list', data-editor='sublime', data-uID=currentUser, href='/profile/sublime', role='tab', class=activeEditor==='sublime' ? 'active' : '') Sublime Text
                    a.list-group-item.list-group-item-action(data-toggle='list', data-editor='visual_code', data-uID=currentUser, href='/profile/visual_code', role='tab', class=activeEditor==='visual_code' ? 'active' : '') Visual Studio Code
            include snippet_template.html