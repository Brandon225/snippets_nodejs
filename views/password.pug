extends layout

block content
    .fullsize-container.page-container.container
        .row.justify-content-center
            .col-6
                h1.display-4.m-b-2 Password Support

                // register form
                form.form(action="/update-password", method="POST")
                    .form-group
                        label(for="email") Email
                        input#email.form-control(type="email", placeholder="name@email.com", name="email")
                    .form-group
                        label(for="pw") New Password
                        input#pw.form-control(type="password", name="password")
                    .form-group
                        label(for="pw2") Confirm New Password
                        input#pw2.form-control(type="password", name="confirmPassword")
                    button.btn.btn-primary(type="submit") Update Password
                